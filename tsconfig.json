{
  "compilerOptions": {
    "declaration": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "lib": [
      "esnext"
    ],
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "build/dist",
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}